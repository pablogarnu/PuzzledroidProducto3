<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.puzzledroid">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ListarRecords"
            android:configChanges="locale"></activity>
        <activity android:name=".ImageToSplit" android:screenOrientation="portrait" />
        <activity android:name=".RegisterActivity"
            android:configChanges="locale"/>
        <activity android:name=".loginActivity"
            android:configChanges="locale"/>
        <activity android:name=".PuzzleList" android:screenOrientation="portrait"
            android:configChanges="locale"/>
        <activity android:name=".Puzzle_view" android:screenOrientation="portrait"
            android:configChanges="locale"/>
        <activity android:name=".WebViewActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale"/>
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths">

            </meta-data>
        </provider>
        <service android:name=".MediaPlayerService"/>
    </application>

</manifest>